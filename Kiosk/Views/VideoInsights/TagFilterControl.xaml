<UserControl
    x:Class="IntelligentKioskSample.Views.VideoInsights.TagFilterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="6,0,18,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <CheckBox  IsChecked="{Binding IsChecked, Mode=TwoWay}" Content="{Binding Tag}" Checked="TagFilterChanged" Unchecked="TagFilterChanged" />
        <TextBlock Grid.Column="1" Text="{Binding Count}" Foreground="Gray" VerticalAlignment="Center" />
    </Grid>
</UserControl>
